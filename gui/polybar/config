tray-transparent = false
tray-offset-y = 0%
tray-offset-x = 0%
tray-maxsize = 18
tray-detached = false
tray-background = ${colors.my_background}

wm-restack = i3

;override-redirect = true

[module/cpu]
type = internal/cpu

interval = 1

format = <label>

label =  %percentage%%

[module/memory]
type = internal/memory

