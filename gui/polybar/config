[module/musicinfo]
type = custom/script

exec = ~/.config/polybar/music.sh
interval = 1
format = <label>
label = %output:0:30:...%
format-padding = 0
format-foreground = ${colors.my_color2}

[module/date]
type = internal/date
interval = 1

date =
date-alt = "%d/%m/%Y"

time = "%a %b %d, %I:%M:%S %p "

time-alt = %H:%M:%S

format-prefix-foreground = ${colors.my_foreground}
format-underline =


label = %date% %time%


[module/battery]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 99

